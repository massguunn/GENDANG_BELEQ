<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Alat Musik</title>
    <link rel="icon" href="/img/pavicon.png" />

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />

    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-md navbar-dark bg-custom-navbar">
      <div class="container">
        <a class="navbar-brand fw-bold" href="/">GENDANG LOMBOK</a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
          aria-controls="navbarNav"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>

        <div
          class="collapse navbar-collapse justify-content-end"
          id="navbarNav"
        >
          <ul class="navbar-nav align-items-center">
            <li class="nav-item">
              <a class="nav-link text-white" href="/">HOME</a>
            </li>
            <li class="nav-item">
              <a href="/gis" class="nav-link text-white">GIS</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-white" href="/alatMusik">ALAT-MUSIK</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <!-- <h1 class="mt-5 text-center">ALAT MUSIK YANG DI GUNAKAN</h1> -->

    <!-- Section Daftar Gendang -->
    <div class="container pt-5 my-5">
      <h2 class="text-center fw-bold">ALAT MUSIK YANG DI GUNAKAN</h2>
      <div class="row mt-4">
        <% if (data && data.length > 0) { %> <% data.forEach(item => { %>
        <div class="col-md-4 mb-4">
          <div class="card shadow-sm rounded-3 h-100">
            <img
              src="https://admin1.gendangbeleqlombok.cloud/peralatan/<%= item.gambar.replace(/^(\/)?peralatan\//, '') %>"
              onerror="this.src='https://placehold.co/350x150?text=No+Image'"
              class="card-img-top"
              alt="gambar <%= item.nama %>"
            />
            <div class="card-body text-center bg-light">
              <h5 class="card-title fw-bold"><%= item.nama %></h5>

              <audio controls class="w-100 mt-2">
                <!-- <source
                  src="http://localhost:3000/peralatan/<%= item.suara.replace(/^(\/)?peralatan\//, '') %>"
                  type="audio/mpeg"
                /> -->

                <source
                  src="https://admin1.gendangbeleqlombok.cloud/peralatan/<%= item.suara.replace(/^(\/)?peralatan\//, '') %>"
                  type="audio/mpeg"
                />
                Browser anda tidak mendukung elemen audio.
              </audio>
              <a
                href="/detailAlatMusik/<%= item.id %>"
                class="btn bg-custom-navbar text-white rounded-pill"
                >selengkapnya</a
              >
            </div>
          </div>
        </div>
        <% }) %> <% } else { %>
        <p class="text-center">Data tidak ditemukan.</p>
        <% } %>
      </div>
    </div>

    <!-- Simpan data JSON ke browser -->
    <script id="data-json" type="application/json">
      <%- JSON.stringify(data) %>
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
