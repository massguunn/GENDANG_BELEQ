<!DOCTYPE html>
<html lang="id">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Detail Gendang Beleq</title>
    <link rel="icon" href="/img/pavicon.png" />

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />

    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"
      rel="stylesheet"
    />

    <style>
      body {
        background-color: #f9f9f9;
      }

      .image-wrapper {
        padding: 20px;
        margin: 30px auto;
        margin-top: 30px;
        border-radius: 16px;
        max-width: 800px;
        text-align: center;
      }

      .custom-image {
        width: 70%;
        height: 100%;
        object-fit: cover;
        border: 4px solid #eee;
        border-radius: 10px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.15);
      }

      .detail-box {
        background: white;
        margin: 0 auto 50px;
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
        max-width: 800px;
      }

      iframe {
        border-radius: 10px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.15);
      }

      .navbar-brand {
        font-weight: bold;
      }

      p {
        margin-top: 30px;
        margin-bottom: 1rem;
        font-size: medium;
      }

      .table-container {
        max-width: 700px;
        margin: auto;
      }
      h2 {
        text-align: center;
        margin-bottom: 20px;
      }
    </style>

    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <!-- Navbar -->
    <nav
      class="navbar navbar-expand-lg navbar-light bg-custom-navbar shadow-sm"
    >
      <div class="container">
        <a class="navbar-brand fw-bold text-light" href="/">Gendang Beleq</a>
        <div class="ms-auto">
          <a href="/gis" class="btn btn-outline-primary">‚Üê Kembali ke GIS</a>
        </div>
      </div>
    </nav>

    <!-- Gambar dengan Border & Shadow (Tengah) -->
    <div class="image-wrapper">
      <h2 class="fw-bold mt-5">Gambar Gendang Beleq</h2>
      <img
        src="http://203.194.113.143:3000/uploads/<%= item.gambar.replace(/^(\/)?uploads\//, '') %>"
        alt="<%= item.nama_gb %>"
        class="custom-image"
        onerror="this.src='https://placehold.co/600x400?text=No+Image'"
      />
    </div>

    <!-- Konten Detail -->
    <div class="container">
      <div class="detail-box">
        <h2 class="fw-bold mb-4 text-center"><%= item.nama_gb %></h2>
        <p><strong>Alamat:</strong> <%= item.alamat_gb %></p>
        <p><strong>Nomor HP:</strong> <%= item.nomer_hp %></p>
        <p><strong>Harga:</strong> Rp <%= item.harga %></p>
        <p><strong>Deskripsi:</strong><br /><%= item.deskripsi %></p>
        <!-- <p>
          <strong>Lokasi:</strong> Lat: <%= item.latitude %>, Lng: <%=
          item.longitude %>
        </p> -->

        <!-- tabel untuk fasilitas yang tersedia -->
        <div class="table-container fw-bold">
          <h2>FASILITAS YANG TERSEDIA</h2>
          <table class="table table-bordered mb-5">
            <thead class="table-light">
              <tr>
                <th>NO</th>
                <th>NAMA</th>
                <th>JUMLAH</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td>1</td>
                <td>GENDANG</td>
                <td><%= item.jm_gendang %></td>
              </tr>
              <tr>
                <td>2</td>
                <td>SERULING</td>
                <td><%= item.jm_suling %></td>
              </tr>
              <tr>
                <td>3</td>
                <td>CEMPRANG</td>
                <td><%= item.jm_cemprang %></td>
              </tr>
              <tr>
                <td>4</td>
                <td>REONG</td>
                <td><%= item.jm_reong %></td>
              </tr>
              <tr>
                <td>5</td>
                <td>GONG</td>
                <td><%= item.jm_gong %></td>
              </tr>
              <tr>
                <td>6</td>
                <td>PETUQ / ONCER</td>
                <td><%= item.jm_petuq %></td>
              </tr>
              <tr>
                <td>7</td>
                <td>RENCEK</td>
                <td><%= item.jm_rencek %></td>
              </tr>
            </tbody>
          </table>
        </div>

        <!-- Embed Maps -->
        <div class="mt-4">
          <iframe
            src="<%= item.map %>"
            width="100%"
            height="300"
            allowfullscreen
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"
          ></iframe>

          <!-- media sosial -->
          <!-- media sosial -->
          <h3 class="text-center mt-4">MEDIA SOSIAL</h3>
          <div
            class="container text-center mt-2 bg-custom-navbar p-4 rounded-5"
          >
            <div class="row text-white">
              <!-- WhatsApp -->
              <div class="col">
                <a
                  href="https://wa.me/<%= item.nomer_hp %>?text=Halo%2C%20saya%20tertarik%20dengan%20layanan%20Gendang%20Beleq%20anda"
                  target="_blank"
                  class="text-white text-decoration-none"
                >
                  <i
                    class="fa-brands fa-square-whatsapp fa-beat fa-2xl"
                    style="color: #63e6be"
                  ></i>
                  WHATSAPP
                </a>
              </div>

              <!-- Facebook -->
              <div class="col">
                <a
                  href="<%= item.link_fb %>"
                  target="_blank"
                  class="text-white text-decoration-none"
                >
                  <i
                    class="fa-brands fa-square-facebook fa-beat fa-2xl"
                    style="color: #74c0fc"
                  ></i>
                  FACEBOOK
                </a>
              </div>

              <!-- Instagram -->
              <div class="col">
                <a
                  href="<%= item.link_ig %>"
                  target="_blank"
                  class="text-white text-decoration-none"
                >
                  <i
                    class="fa-brands fa-square-instagram fa-beat fa-2xl"
                    style="color: #e1306c"
                  ></i>
                  INSTAGRAM
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Bootstrap JS -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      defer
    ></script>
  </body>
</html>
