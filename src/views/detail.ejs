<!DOCTYPE html>
<html lang="id">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Detail Gendang Beleq</title>
    <link rel="icon" href="/img/pavicon.png" />

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />

    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"
      rel="stylesheet"
    />

    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/style.css" />
    <link rel="stylesheet" href="/css/detail.css" />
  </head>
  <body>
    <!-- Navbar -->
    <nav
      class="navbar navbar-expand-lg navbar-light bg-custom-navbar shadow-sm"
    >
      <div class="container">
        <a class="navbar-brand fw-bold text-light" href="/">GENDANG LOMBOK</a>
        <div class="ms-auto">
          <a href="/gis" class="btn btn-outline-primary">‚Üê Kembali ke GIS</a>
        </div>
      </div>
    </nav>

    <!-- Gambar dengan Border & Shadow (Tengah) -->
    <div class="image-wrapper">
      <h2 class="fw-bold mt-5">Gambar Gendang Beleq</h2>
      <img
        src="https://admin1.gendangbeleqlombok.cloud/uploads/<%= item.gambar.replace(/^(\/)?uploads\//, '') %>"
        alt="<%= item.nama_gb %>"
        class="custom-image"
        onerror="this.src='https://placehold.co/600x400?text=No+Image'"
      />
    </div>

    <!-- Konten Detail -->
    <div class="container">
      <div class="detail-box">
        <h2 class="fw-bold mb-4 text-center"><%= item.nama_gb %></h2>
        <p><strong>Alamat:</strong> <%= item.alamat_gb %></p>
        <p><strong>Nomor HP:</strong> <%= item.nomer_hp %></p>
        <p><strong>Harga:</strong> Rp <%= item.harga %></p>
        <p><strong>Deskripsi:</strong><br /><%= item.deskripsi %></p>
        <!-- <p>
          <strong>Lokasi:</strong> Lat: <%= item.latitude %>, Lng: <%=
          item.longitude %>
        </p> -->

        <!-- tabel untuk fasilitas yang tersedia -->
        <div class="table-container fw-bold">
          <h2>FASILITAS YANG TERSEDIA</h2>
          <table class="table table-bordered mb-5">
            <thead class="table-light">
              <tr>
                <th>NO</th>
                <th>NAMA</th>
                <th>JUMLAH</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td>1</td>
                <td>GENDANG</td>
                <td><%= item.jm_gendang %></td>
              </tr>
              <tr>
                <td>2</td>
                <td>SERULING</td>
                <td><%= item.jm_suling %></td>
              </tr>
              <tr>
                <td>3</td>
                <td>CEMPRANG</td>
                <td><%= item.jm_cemprang %></td>
              </tr>
              <tr>
                <td>4</td>
                <td>REONG</td>
                <td><%= item.jm_reong %></td>
              </tr>
              <tr>
                <td>5</td>
                <td>GONG</td>
                <td><%= item.jm_gong %></td>
              </tr>
              <tr>
                <td>6</td>
                <td>PETUQ / ONCER</td>
                <td><%= item.jm_petuq %></td>
              </tr>
              <tr>
                <td>7</td>
                <td>RENCEK</td>
                <td><%= item.jm_rencek %></td>
              </tr>
            </tbody>
          </table>
        </div>

        <!-- Embed Maps -->
        <div class="mt-4">
          <iframe
            src="<%= item.map %>"
            width="100%"
            height="300"
            allowfullscreen
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"
          ></iframe>

          <!-- media sosial -->
          <!-- media sosial -->
          <!-- Media Sosial -->
          <h3 class="text-center mt-4">MEDIA SOSIAL</h3>

          <div
            class="container text-center mt-2 bg-custom-navbar p-4 rounded-5"
          >
            <div class="row text-white">
              <!-- WhatsApp -->
              <div class="col-4">
                <a
                  href="https://wa.me/<%= item.nomer_hp %>?text=Halo%2C%20saya%20tertarik%20dengan%20layanan%20Gendang%20Beleq%20anda"
                  target="_blank"
                  class="text-white text-decoration-none d-flex flex-column align-items-center media-sosial-link"
                >
                  <i
                    class="fa-brands fa-square-whatsapp fa-beat media-icon"
                    style="color: #63e6be"
                  ></i>
                  <span class="media-label">WHATSAPP</span>
                </a>
              </div>

              <!-- Facebook -->
              <div class="col-4">
                <a
                  href="<%= item.link_fb %>"
                  target="_blank"
                  class="text-white text-decoration-none d-flex flex-column align-items-center media-sosial-link"
                >
                  <i
                    class="fa-brands fa-square-facebook fa-beat media-icon"
                    style="color: #74c0fc"
                  ></i>
                  <span class="media-label">FACEBOOK</span>
                </a>
              </div>

              <!-- Instagram -->
              <div class="col-4">
                <a
                  href="<%= item.link_ig %>"
                  target="_blank"
                  class="text-white text-decoration-none d-flex flex-column align-items-center media-sosial-link"
                >
                  <i
                    class="fa-brands fa-square-instagram fa-beat media-icon"
                    style="color: #e1306c"
                  ></i>
                  <span class="media-label">INSTAGRAM</span>
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Bootstrap JS -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      defer
    ></script>
  </body>
</html>
